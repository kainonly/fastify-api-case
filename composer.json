{
  "type": "project",
  "require": {
    "php": ">=7.4.0",
    "ext-json": "*",
    "ext-redis": "*",
    "ext-swoole": ">=4.5",
    "hyperf/config": "2.1.*",
    "hyperf/db-connection": "2.1.*",
    "hyperf/framework": "2.1.*",
    "hyperf/guzzle": "2.1.*",
    "hyperf/http-server": "2.1.*",
    "hyperf/logger": "2.1.*",
    "hyperf/paginator": "2.1.*",
    "hyperf/redis": "2.1.*",
    "hyperf/validation": "2.1.*",
    "lcobucci/jwt": "^4.0",
    "overtrue/qcloud-cos-client": "^1.0",
    "phpseclib/phpseclib": "^3.0",
    "ramsey/uuid": "^4.0",
    "danielstjules/stringy": "^3.1"
  },
  "require-dev": {
    "filp/whoops": "^2.9",
    "friendsofphp/php-cs-fixer": "^2.14",
    "hyperf/devtool": "2.1.*",
    "hyperf/testing": "2.1.*",
    "mockery/mockery": "^1.0",
    "phpstan/phpstan": "^0.12.18",
    "roave/security-advisories": "dev-master",
    "swoole/ide-helper": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Hyperf\\Curd\\": "library/hyperf-curd/src/",
      "Hyperf\\Extra\\": "library/hyperf-extra/src/"
    },
    "files": [
      "library/hyperf-extra/src/helper.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "HyperfTest\\": "tests/",
      "HyperfExtraTest\\": "library/hyperf-extra/tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": [],
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-autoload-dump": [
      "rm -rf runtime/container"
    ],
    "analyse": "phpstan analyse --memory-limit 300M -l 0 -c phpstan.neon ./app ./config",
    "cs-fix": "php-cs-fixer fix $1",
    "start": "php ./bin/hyperf.php start",
    "test": "co-phpunit -c phpunit.xml --colors=always"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "repositories": {
    "packagist": {
      "type": "composer",
      "url": "https://mirrors.aliyun.com/composer/"
    }
  },
  "license": "MIT"
}
