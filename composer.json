{
  "name": "kain/hyperf-skeleton",
  "description": "辅助 Hyperf 框架的工具集合使用案例，构建简洁统一的中后台接口方案",
  "type": "project",
  "require": {
    "php": ">=7.4.0",
    "ext-json": "*",
    "ext-redis": "*",
    "ext-swoole": ">=4.5",
    "hyperf/command": "2.1.*",
    "hyperf/config": "2.1.*",
    "hyperf/db-connection": "2.1.*",
    "hyperf/framework": "2.1.*",
    "hyperf/guzzle": "2.1.*",
    "hyperf/http-server": "2.1.*",
    "hyperf/logger": "2.1.*",
    "hyperf/nats": "^2.1",
    "hyperf/paginator": "2.1.*",
    "hyperf/process": "2.1.*",
    "hyperf/redis": "2.1.*",
    "hyperf/validation": "2.1.*",
    "kain/hyperf-curd": "~2.1",
    "kain/hyperf-extra": "~2.1"
  },
  "require-dev": {
    "filp/whoops": "^2.9",
    "hyperf/devtool": "2.1.*",
    "roave/security-advisories": "dev-latest",
    "swoole/ide-helper": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": [],
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-autoload-dump": [
      "rm -rf runtime/container"
    ],
    "analyse": "phpstan analyse --memory-limit 300M -l 0 -c phpstan.neon ./app ./config",
    "cs-fix": "php-cs-fixer fix $1",
    "start": "php ./bin/hyperf.php start",
    "test": "co-phpunit -c phpunit.xml --colors=always"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "repositories": {
    "packagist": {
      "type": "composer",
      "url": "https://mirrors.aliyun.com/composer/"
    }
  },
  "license": "MIT"
}
